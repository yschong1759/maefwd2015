h2 Input the scores

form.form-horizontal
	.form-group
			label.col-sm-3.control-label(for="expEntry") Experience Gained
			.col-sm-9
				.form-inline
					.btn-group(data-toggle="buttons", style="margin-right:10px")
						label.btn.btn-primary.active Add
							input(type="radio", name="expAddorMinus", id="option1" autocomplete="off", value="Add", checked)

						label.btn.btn-primary Minus
							input(type="radio", name="expAddorMinus", id="option2" autocomplete="off", value="Minus")
						script.
							$('#option2').on('click', function () {
								$('#option2').radio('active');
								$('#option1').radio('reset');}
					input.form-control(type="number", id="expEntry")

